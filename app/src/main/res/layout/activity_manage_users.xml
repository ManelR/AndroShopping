<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.projectes.androidshopping.activities.ManageUsersActivity">

    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:id="@+id/activity_manageUsers_lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/activity_manageUsers_lblTitle"/>

    <ListView
        android:layout_marginTop="10dp"
        android:layout_below="@id/activity_manageUsers_lblTitle"
        android:id="@+id/activity_manageUsers_listView"
        android:layout_width="match_parent"
        android:dividerHeight="1px"
        android:divider="@color/divider_color"
        android:layout_height="match_parent">
    </ListView>

</RelativeLayout>
