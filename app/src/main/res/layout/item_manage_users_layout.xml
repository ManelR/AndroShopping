<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/default_background_color">

    <ImageView
        android:id="@+id/item_manage_users_imgUser"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:src="@mipmap/user"/>

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_manage_users_imgUser"
        android:id="@+id/item_manage_users_infoContainer"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_manage_users_lblEmail"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:text="@string/item_manage_users_lblEmail"/>

            <TextView
                android:id="@+id/item_manage_users_txtEmail"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_manage_users_lblEdad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/item_manage_users_lblAge"/>

            <TextView
                android:id="@+id/item_manage_users_txtEdad"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_manage_users_lblGenere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="2dp"
                android:text="@string/item_manage_users_lblGenere"/>

            <TextView
                android:id="@+id/item_manage_users_txtGenere"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/item_manage_users_btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:padding="8dp"
        android:src="@drawable/abc_ic_clear_mtrl_alpha"
        />

</RelativeLayout>