<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.salle.practica.activities.BienvenidaActivity$PlaceholderFragment" >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/fragment_newProduct3_lblTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_newProduct3_lblTitle"
                android:textColor="#606060"
                android:textSize="15sp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/fragment_newProduct3_listView"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>

            <EditText
                android:id="@+id/fragment_newProduct3_txtNewTag"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_newProduct3_txtNewTagHint"/>

            <Button
                android:id="@+id/fragment_newProduct3_btnAddTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:imeOptions="flagNoExtractUi"
                android:layout_gravity="right"
                android:text="@string/fragment_newProduct3_btnAddTag"/>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>