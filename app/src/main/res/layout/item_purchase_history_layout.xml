<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/default_background_color">

    <TextView
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:id="@+id/item_purchase_history_lblDate"
        android:layout_width="wrap_content"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:textColor="@color/solid_black"/>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/item_purchase_history_priceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_purchase_history_lblPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/item_purchase_history_lblPrice"
            android:textColor="@color/solid_black"/>

        <TextView
            android:id="@+id/item_purchase_history_txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/solid_black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_below="@id/item_purchase_history_lblDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_purchase_history_lblQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_purchase_history_lblQuantity"
            android:textColor="@color/solid_black"/>

        <TextView
            android:id="@+id/item_pruchase_history_txtQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/solid_black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_purchase_history_priceContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_purchase_history_lblProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/item_purchase_history_lblProduct"
            android:textColor="@color/solid_black"/>

        <TextView
            android:id="@+id/item_purchase_history_txtProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/solid_black"/>

    </LinearLayout>



</RelativeLayout>