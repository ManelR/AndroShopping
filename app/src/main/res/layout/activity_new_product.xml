<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.projectes.androidshopping.activities.NewProductActivity">

    <Button
        android:id="@+id/activity_newProduct_btnSeguent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:text="@string/activity_newUser_continuar"/>

    <Button
        android:id="@+id/activity_newProduct_btnAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="16dp"
        android:text="@string/activity_newUser_anterior"/>

    <FrameLayout
        android:id="@+id/activity_newProduct_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activity_newProduct_btnAnterior">
    </FrameLayout>
</RelativeLayout>
