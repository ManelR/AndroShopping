<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/item_manage_products_imgProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/products"/>


    <LinearLayout
        android:layout_gravity="center"
        android:id="@+id/item_manage_products_infoContainer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_manage_products_lblName"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_height="wrap_content"
                android:textColor="@color/solid_black"
                android:text="@string/item_manage_products_lblName"/>

            <TextView
                android:id="@+id/item_manage_products_txtName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/solid_black"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_manage_users_lblTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:singleLine="true"
                android:textColor="@color/solid_black"
                android:ellipsize="end"
                android:text="@string/item_manage_products_lblTags"/>

            <TextView
                android:id="@+id/item_manage_products_txtTags"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/solid_black"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_manage_products_lblPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/solid_black"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="2dp"
                android:text="@string/item_manage_products_lblPrecio"/>

            <TextView
                android:id="@+id/item_manage_products_txtPrice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/solid_black"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_margin="2dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/item_manage_products_btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:src="@drawable/abc_ic_clear_mtrl_alpha"/>

</LinearLayout>