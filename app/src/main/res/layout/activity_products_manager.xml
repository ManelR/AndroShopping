<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.projectes.androidshopping.activities.ProductsManagerActivity">

    <TextView
        android:id="@+id/activity_manage_products_lblTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="8dp"
        android:text="@string/activity_manage_products_lblTitle"/>

    <ListView
        android:divider="@color/divider_color"
        android:dividerHeight="1px"
        android:id="@+id/activity_manage_products_listView"
        android:layout_below="@id/activity_manage_products_lblTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


</RelativeLayout>
